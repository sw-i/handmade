# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# MySQL Database
MYSQL_ROOT_PASSWORD=handmade_password123
MYSQL_DATABASE=handmade_hub
MYSQL_USER=handmade_user
MYSQL_PASSWORD=handmade_password123

# Backend Application
NODE_ENV=development
PORT=5000

# Database Connection
DB_HOST=mysql
DB_PORT=3306
DB_NAME=handmade_hub
DB_USER=handmade_user
DB_PASSWORD=handmade_password123

# JWT Secrets (IMPORTANT: Generate secure random strings for production)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_change_this_before_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_min_32_characters_long_change_this_before_production
JWT_REFRESH_EXPIRE=30d
JWT_COOKIE_EXPIRE=7

# Stripe Configuration (Replace with your own keys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
